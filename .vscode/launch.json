{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      // "preLaunchTask": "npm: build",
      "runtimeArgs": [
        "-r",
        "ts-node/register/transpile-only",
        "-r",
        "tsconfig-paths/register"
      ],
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
